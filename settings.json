{
  // Integrated Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.stickyScroll.enabled": true,

  // Zen
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": false,

  // Window
  "window.systemColorTheme": "auto",
  "window.titleBarStyle": "custom",
  "window.title": "${rootName}",
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,

  // Workbench
  "workbench.editor.labelFormat": "short",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.showIcons": false,
  "workbench.editor.tabSizing": "fit",
  "workbench.editor.pinnedTabSizing": "shrink",

  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",

  "workbench.iconTheme": "vs-seti",

  "workbench.tree.indent": 24,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.stickyScrollMaxItemCount": 10,

  // Accessibility
  // "accessibility.dimUnfocused.enabled": true,

  // Editor customization
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": false,
  "editor.foldingImportsByDefault": false,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.hover.delay": 500,
  "editor.inlineSuggest.enabled": true,
  "editor.largeFileOptimizations": false,
  "editor.linkedEditing": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": "multiFile",
  "editor.padding.bottom": 100,
  "editor.renderWhitespace": "all",
  "editor.scrollBeyondLastLine": false,
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",

  // Search
  "search.defaultViewMode": "tree",
  "search.collapseResults": "alwaysExpand",
  "search.showLineNumbers": true,

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.icons": true,
  "breadcrumbs.symbolPath": "off",

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.sortOrder": "filesFirst",
  "explorer.compactFolders": false,
  "explorer.autoRevealExclude": {
    "**/node_modules": true
  },

  // ESLint
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // CSS
  "css.lint.unknownAtRules": "ignore",

  // JS / TS
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Version Control
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.experimental.showMoves": true,
  "git.confirmSync": true,
  "git.enableSmartCommit": false,
  "gitlens.launchpad.indicator.enabled": false,

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Plugins
  "errorLens.enabled": true,
  "errorLens.statusBarIconsEnabled": true,

  "cSpell.userWords": ["Bozhilov", "Deyan", "dodobrat", "testid", "todos"],
  "cSpell.enableFiletypes": ["svelte"],

  "svg.preview.autoFit": false,
  "svg.preview.autoShow": false,
  "svg.preview.background": "dark-transparent",
  "svg.preview.mode": "svg",
  "svg.preview.showRuler": true,
  "svg.preview.viewMode": "onlyOne",

  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}
