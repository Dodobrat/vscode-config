{
  // Integrated Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.env.osx": {},
  "terminal.integrated.fontFamily": "Geist Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.tabs.enabled": false,

  // Zen
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": false,

  // Window
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "never",
  "window.newWindowDimensions": "inherit",
  "window.systemColorTheme": "auto",
  "window.titleBarStyle": "native",

  // Workbench
  "workbench.activityBar.location": "default",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.labelFormat": "default",
  "workbench.editor.pinnedTabSizing": "normal",
  "workbench.editor.showIcons": true,
  "workbench.editor.tabSizing": "fit",
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-auto",
  "workbench.layoutControl.enabled": false,
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.indent": 24,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.stickyScrollMaxItemCount": 10,
  // "workbench.editor.showTabs": "none",

  "workbench.colorCustomizations": {
    "[Default Dark Modern]": {
      "tab.activeBorderTop": "#fff",
      "tab.inactiveBackground": "#1f1f1f",
      "editorGroupHeader.tabsBackground": "#1f1f1f",
      "welcomePage.background": "#1f1f1f",
      "sideBar.background": "#1f1f1f",
      "activityBar.background": "#1f1f1f",
      "terminal.background": "#1f1f1f"
    },
    "[Default Light Modern]": {
      "tab.activeBorderTop": "#000",
      "tab.inactiveBackground": "#fff",
      "editorGroupHeader.tabsBackground": "#fff",
      "welcomePage.background": "#fff",
      "sideBar.background": "#fff",
      "activityBar.background": "#fff",
      "terminal.background": "#fff"
    }
  },

  // Accessibility
  // "accessibility.dimUnfocused.enabled": true,
  "accessibility.underlineLinks": true,

  // Editor customization
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeLensFontFamily": "Geist Mono",
  "editor.colorDecorators": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorWidth": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": false,
  "editor.foldingImportsByDefault": false,
  "editor.fontFamily": "Geist Mono",
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.formatOnSave": true,
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.guides.bracketPairs": "active",
  "editor.hover.delay": 500,
  "editor.inlayHints.fontFamily": "Geist Mono",
  "editor.inlineSuggest.enabled": true,
  "editor.largeFileOptimizations": false,
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": "multiFile",
  "editor.overviewRulerBorder": false,
  "editor.padding.bottom": 100,
  "editor.renderWhitespace": "all",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "top",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,

  // Search
  "search.collapseResults": "alwaysExpand",
  "search.defaultViewMode": "tree",
  "search.showLineNumbers": true,

  // Breadcrumbs
  "breadcrumbs.enabled": false,
  // "breadcrumbs.enabled": true,
  // "breadcrumbs.filePath": "on",
  // "breadcrumbs.icons": true,
  // "breadcrumbs.symbolPath": "off",

  // Explorer
  "explorer.autoRevealExclude": { "**/node_modules": true },
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,

  // ESLint
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // CSS
  "css.lint.unknownAtRules": "ignore",

  // JS / TS
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Version Control
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "gitlens.launchpad.indicator.enabled": false,

  // Plugins
  "console-ninja.featureSet": "Community",

  "cSpell.userWords": ["Deyan", "Bozhilov", "dodobrat", "testid"],

  "svg.preview.autoFit": false,
  "svg.preview.showRuler": false,

  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": false,

  "apc.monospace.font.family": "Geist Mono",
  "apc.font.family": "Geist Mono",
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": { "x": 10, "y": 10 }
  },
  "apc.activityBar": { "position": "bottom", "size": 35 },
  "apc.listRow": { "fontSize": 14 },
  "apc.header": { "fontSize": 14 },
  "apc.stylesheet": {
    // command palette wrapper
    ".quick-input-widget": {
      "width": "max(600px, 50vw) !important",
      "margin-left": "0 !important",
      "translate": "-50%"
    },
    // command palette input
    ".quick-input-filter .monaco-inputbox input": {
      "font-size": "1.25rem !important",
      "font-weight": "bold !important",
      "padding": "0.5rem !important"
    }
  }
}
