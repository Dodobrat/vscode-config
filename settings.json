{
  // Integrated Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Window
  "window.commandCenter": false,

  // Zen Mode
  "zenMode.hideTabs": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": false,
  // "zenMode.hideActivityBar": false,

  // Workbench
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.tabSizing": "fit",
  "workbench.editor.labelFormat": "short",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 16,
  "workbench.sideBar.location": "left",

  // Accessibility
  // "accessibility.dimUnfocused.enabled": true,

  // Editor customization
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": false,
  "editor.foldingImportsByDefault": false,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.hover.delay": 500,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.padding.bottom": 100,
  "editor.renderWhitespace": "all",
  "editor.scrollBeyondLastLine": false,
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "editor.largeFileOptimizations": false,

  // Search
  "search.defaultViewMode": "tree",
  "search.collapseResults": "alwaysExpand",
  "search.showLineNumbers": true,

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.icons": true,
  "breadcrumbs.symbolPath": "off",

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.sortOrder": "filesFirst",
  "explorer.compactFolders": false,
  "explorer.autoRevealExclude": {
    "**/node_modules": true
  },

  // ESLint
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // CSS
  "css.lint.unknownAtRules": "ignore",

  // JS / TS
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "svelte.enable-ts-plugin": true,

  // Version Control
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.experimental.showMoves": true,
  "git.confirmSync": true,
  "git.enableSmartCommit": false,
  "gitlens.graph.layout": "editor",
  "gitlens.advanced.messages": {
    "suppressCreatePullRequestPrompt": true
  },

  // Prettier
  "prettier.arrowParens": "always",
  "prettier.bracketSpacing": true,
  "prettier.endOfLine": "lf",
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 140,
  "prettier.quoteProps": "as-needed",
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.tabWidth": 2, // 4
  "prettier.trailingComma": "es5",
  "prettier.useTabs": false, // true

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Plugins
  "errorLens.enabled": true,
  "errorLens.statusBarIconsEnabled": true,

  "cSpell.userWords": ["Bozhilov", "Deyan", "dodobrat", "testid", "todos"],
  "cSpell.enableFiletypes": ["svelte"],

  "svg.preview.autoFit": false,
  "svg.preview.autoShow": false,
  "svg.preview.background": "dark-transparent",
  "svg.preview.mode": "svg",
  "svg.preview.showRuler": true,
  "svg.preview.viewMode": "onlyOne",

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "editor.accessibilitySupport": "off"
}
