{
  // Integrated Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.stickyScroll.enabled": true,

  // Zen
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": false,

  // Window
  "window.autoDetectColorScheme": true,
  "window.newWindowDimensions": "inherit",
  "window.systemColorTheme": "auto",
  "window.title": "${rootName}",

  // Workbench
  "workbench.activityBar.location": "bottom",
  "workbench.colorTheme": "Default Dark+",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.labelFormat": "default",
  "workbench.editor.pinnedTabSizing": "normal",
  "workbench.editor.showIcons": true,
  "workbench.editor.tabSizing": "fit",
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-auto",
  "workbench.preferredDarkColorTheme": "React Theme",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.indent": 24,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.stickyScrollMaxItemCount": 10,
  // "workbench.editor.showTabs": "none",

  // Accessibility
  // "accessibility.dimUnfocused.enabled": true,
  "accessibility.underlineLinks": true,

  // Editor customization
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.colorDecorators": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": false,
  "editor.foldingImportsByDefault": false,
  "editor.fontFamily": "Geist Mono",
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.formatOnSave": true,
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.guides.bracketPairs": "active",
  "editor.hover.delay": 500,
  "editor.inlineSuggest.enabled": true,
  "editor.largeFileOptimizations": false,
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": "multiFile",
  "editor.padding.bottom": 100,
  "editor.renderWhitespace": "all",
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "top",
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",

  // Search
  "search.collapseResults": "alwaysExpand",
  "search.defaultViewMode": "tree",
  "search.showLineNumbers": true,

  // Breadcrumbs
  "breadcrumbs.enabled": false,
  // "breadcrumbs.enabled": true,
  // "breadcrumbs.filePath": "on",
  // "breadcrumbs.icons": true,
  // "breadcrumbs.symbolPath": "off",

  // Explorer
  "explorer.autoRevealExclude": { "**/node_modules": true },
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,

  // ESLint
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // CSS
  "css.lint.unknownAtRules": "ignore",

  // JS / TS
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Version Control
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "git.confirmSync": true,
  "git.enableSmartCommit": false,
  "gitlens.launchpad.indicator.enabled": false,

  // Emmet
  "emmet.includeLanguages": { "javascript": "javascriptreact" },

  // Plugins
  "errorLens.enabled": true,

  "cSpell.userWords": ["Deyan", "Bozhilov", "dodobrat", "testid"],

  "svg.preview.autoFit": false,
  "svg.preview.autoShow": false,
  "svg.preview.mode": "svg",
  "svg.preview.showRuler": true,
  "svg.preview.viewMode": "onlyOne",

  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": false,

  "vscode_custom_css.imports": ["file:///Users/dodo/Documents/vscode/index.css"]
}
