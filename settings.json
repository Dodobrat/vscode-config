{
	// Integrated Terminal
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.defaultProfile.windows": "Git Bash",

	// Workbench customization
	"workbench.colorTheme": "monokai-charcoal (gray)",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorCustomizations": {
		"[monokai-charcoal*]": {
			"activityBar.activeBackground": "#222",
			"activityBar.background": "#000",
			"activityBar.foreground": "#fff",
			"activityBar.inactiveForeground": "#aaa",
			"activityBarBadge.background": "#777",
			"activityBarBadge.foreground": "#fff",
			"editorGroupHeader.tabsBorder": "#444",
			"inputOption.activeBackground": "#555",
			"inputOption.activeBorder": "#fff",
			"inputOption.activeForeground": "#fff",
			"tab.activeBackground": "#222"
		}
	},

	// Editor customization
	"editor.bracketPairColorization.enabled": true,
	"editor.cursorBlinking": "solid",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorStyle": "line",
	"editor.cursorWidth": 2,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.dragAndDrop": false,
	"editor.foldingImportsByDefault": false,
	"editor.fontSize": 12,
	"editor.formatOnSave": true,
	"editor.guides.bracketPairs": "active",
	"editor.hover.delay": 500,
	"editor.inlineSuggest.enabled": true,
	"editor.linkedEditing": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.padding.bottom": 100,
	"editor.renderWhitespace": "all",
	"editor.scrollBeyondLastLine": false,
	"editor.stickyScroll.enabled": true,
	"editor.stickyScroll.maxLineCount": 5,
	"editor.suggestSelection": "first",
	"editor.wordWrap": "on",
	"editor.tokenColorCustomizations": {
		"[monokai-charcoal*]": {
			"textMateRules": [
				{
					"scope": ["keyword.control.svelte", "entity.name.type.svelte"],
					"settings": {
						"foreground": "#A6E22E"
					}
				},
				{
					"scope": ["keyword.control.conditional.svelte"],
					"settings": {
						"foreground": "#A6E22E",
						"fontStyle": "bold"
					}
				}
			]
		}
	},

	// Search
	"search.defaultViewMode": "tree",
	"search.collapseResults": "alwaysExpand",
	"search.showLineNumbers": true,

	// Breadcrumbs
	"breadcrumbs.enabled": true,
	"breadcrumbs.filePath": "on",
	"breadcrumbs.icons": true,
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showConstructors": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showEnums": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showInterfaces": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showModules": false,
	"breadcrumbs.showNamespaces": false,
	"breadcrumbs.showNull": false,
	"breadcrumbs.showNumbers": false,
	"breadcrumbs.showObjects": false,
	"breadcrumbs.showOperators": false,
	"breadcrumbs.showPackages": false,
	"breadcrumbs.showProperties": false,
	"breadcrumbs.showStrings": false,
	"breadcrumbs.showStructs": false,
	"breadcrumbs.showTypeParameters": false,
	"breadcrumbs.showVariables": false,
	"breadcrumbs.symbolPath": "off",
	"breadcrumbs.symbolSortOrder": "name",

	// Explorer
	"explorer.confirmDelete": false,

	// CSS
	"css.lint.unknownAtRules": "ignore",

	// JS / TS
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",

	// Svelte
	"svelte.enable-ts-plugin": true,
	"svelte.plugin.svelte.note-new-transformation": false,
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode" // TODO: update to prettier when available
	},

	// Version Control
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.renderSideBySide": true,
	"git.confirmSync": true,
	"git.enableSmartCommit": false,
	"gitlens.advanced.messages": {
		"suppressCreatePullRequestPrompt": true
	},

	// Prettier
	"prettier.arrowParens": "always",
	"prettier.bracketSpacing": true,
	"prettier.endOfLine": "lf",
	"prettier.jsxSingleQuote": true,
	"prettier.printWidth": 140,
	"prettier.quoteProps": "as-needed",
	"prettier.semi": true,
	"prettier.singleQuote": false,
	"prettier.tabWidth": 4,
	"prettier.trailingComma": "es5",
	"prettier.useTabs": true,

	// Emmet
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},

	// ErrorLens
	"errorLens.enabled": true,
	"errorLens.statusBarIconsEnabled": true,

	// Other plugins
	"cSpell.userWords": ["Bozhilov", "Deyan", "dodobrat", "testid", "monokai"],
	"cSpell.enableFiletypes": ["svelte"],

	"svg.preview.autoFit": false,
	"svg.preview.autoShow": true,
	"svg.preview.background": "dark-transparent",
	"svg.preview.mode": "svg",
	"svg.preview.showRuler": true,
	"svg.preview.viewMode": "onlyOne",

	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}
